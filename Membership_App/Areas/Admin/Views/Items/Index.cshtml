 @model IEnumerable<Membership_App.Entities.Item>
 
 @using Membership_App.Areas.Admin.Models
@using Membership_App.Extensions

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<h2>Items</h2>

<div class="row">
    <div class="col-md-12">
        <p>

            @Html.Partial("_CreateNewSectionButton");

        </p>

    </div>

</div>

<div class="row">
    <div class="panel panel-default">
        <!-- Default panel contents -->
        <div class="panel-heading">
            <table class="table table-striped table-condensed">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Title)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Description)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.HTML)
                        </th>
                       
                        <th>
                            @Html.DisplayNameFor(model => model.IsFree)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ItemTypeId)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.PartId)
                        </th>
                        
                        <th>
                            @Html.DisplayNameFor(model => model.SectionId)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.WaitDays)
                        </th>
                        <th colspan="2"></th>
                    </tr>
                </thead>
            </div>

            
                <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(model => item.Title)
                        </td>

                        <td>
                            @Html.DisplayFor(model => item.Description)
                        </td>
                        <td>
                            @Html.DisplayFor(model => item.HTML)
                        </td>
                        <td>
                            @Html.DisplayFor(model => item.IsFree)
                        </td>
                        <td>
                            @Html.DisplayFor(model => item.ItemTypeId)
                        </td>
                        <td>
                            @Html.DisplayFor(model => item.PartId)
                        </td>
                        
                        <td>
                            @Html.DisplayFor(model => item.SectionId)
                        </td>

                        <td>
                            @Html.DisplayFor(model => item.WaitDays)
                        </td>
                        <td colspan="2">
                            @Html.Partial("_ButtonsList", new ButtonModel
                            {
                                Id = item.Id
                            })

                        </td>
                    </tr>

                }
                </tbody>
                </table>
            
    </div>
</div>