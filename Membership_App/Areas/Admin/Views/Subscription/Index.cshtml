@model IEnumerable<Membership_App.Entities.Subscription>

@using Membership_App.Areas.Admin.Models

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<h2>Subscriptions</h2>

<div class="row">
    <div class="col-md-12">
        <p>

            @Html.Partial("_CreateNewSectionButton");

        </p>

    </div>

</div>

<div class="row">
    <div class="panel panel-default">
        <!-- Default panel contents -->
        <div class="panel-heading">
            <table class="table table-striped table-condensed">
            <thead>
            <tr>
                <th class="col-md-3">
                    @Html.DisplayNameFor(model => model.Title)
                </th>
                <th class="col-md-3">
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th class="col-md-3">
                    @Html.DisplayNameFor(model => model.RegistrationCode)
                </th>

                <th class="col-md-3"></th>
            </tr>
            </thead>
        </div>


        <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(model => item.Title)
                </td>

                <td>
                    @Html.DisplayFor(model => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(model => item.RegistrationCode)
                </td>

                <td>
                    @Html.Partial("_ButtonsList", new ButtonModel
                    {
                        Id = item.Id
                    })

                </td>
            </tr>

        }
        </tbody>
        </table>

    </div>
</div>